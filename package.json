{
  "name": "@rpattersonnet/project-structure",
  "scope": "@rpattersonnet",
  "version": "0.0.0",
  "description": "Project structure foundation or template, package metadata",
  "keywords": [
    "template",
    "structure"
  ],
  "license": "MIT",
  "author": {
    "name": "Ross Patterson",
    "email": "me@rpatterson.net",
    "url": "https://www.rpatterson.net/"
  },
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/rpatterson/project-structure.git"
  },
  "funding": {
    "type": "liberapay",
    "url": "https://liberapay.com/rpatterson/donate"
  },
  "scripts": {
    "prepare": "husky install",
    "test": "wtr",
    "test:watch": "wtr --watch",
    "lint": "npm run lint:lit-analyzer && npm run lint:eslint && npm run lint:prettier",
    "lint:lit-analyzer": "lit-analyzer ./src/ui/**.js",
    "lint:eslint": "eslint './'",
    "lint:prettier": "prettier --check './'",
    "analyze": "cem analyze --litelement --globs \"**/*.js\"",
    "analyze:watch": "cem analyze --litelement --globs \"**/*.js\" --watch",
    "checksize": "rollup -c ; cat ./build/project-structure.bundled.js | gzip -9 | wc -c ; rm ./build/project-structure.bundled.js",
    "format": "npm run format:eslint && npm run format:prettier",
    "format:eslint": "eslint --fix './'",
    "format:prettier": "prettier --write './'",
    "docs": "npm run analyze && npm run docs:api",
    "docs:api": "jsdoc -c './jsdocrc.json'",
    "serve": "wds --watch",
    "serve:prod": "MODE=prod npm run serve",
    "test": "npm run test:dev && npm run test:prod",
    "test:dev": "wtr",
    "test:watch": "wtr --watch",
    "test:prod": "MODE=prod wtr",
    "test:prod:watch": "MODE=prod wtr --watch"
  },
  "type": "module",
  "exports": {
    ".": "./src/index.js",
    "./*.js": "./src/*.js"
  },
  "dependencies": {
    "lit": "^2.2.4"
  },
  "devDependencies": {
    "@babel/eslint-parser": "7.21.8",
    "@custom-elements-manifest/analyzer": "^0.6.3",
    "@esm-bundle/chai": "4.3.4-fix.0",
    "@open-wc/testing": "^3.1.5",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-replace": "^5.0.2",
    "@web/dev-server": "^0.1.31",
    "@web/dev-server-legacy": "^1.0.0",
    "@web/test-runner": "0.16.1",
    "@web/test-runner-playwright": "0.10.0",
    "@webcomponents/webcomponentsjs": "^2.6.0",
    "eslint": "8.40.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-mocha-no-only": "1.1.1",
    "eslint-plugin-no-unsanitized": "4.0.2",
    "eslint-plugin-security": "1.7.1",
    "eslint-plugin-sonarjs": "0.19.0",
    "eslint-plugin-unicorn": "47.0.0",
    "eslint-plugin-xss": "0.1.12",
    "husky": "^8.0.0",
    "jsdoc": "4.0.2",
    "lit-analyzer": "^1.2.1",
    "prettier": "2.8.8",
    "rimraf": "^3.0.2",
    "rollup": "^2.73.0",
    "rollup-plugin-summary": "^1.4.3",
    "rollup-plugin-terser": "^7.0.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "customElements": "custom-elements.json"
}
