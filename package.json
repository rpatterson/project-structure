{
  "name": "@rpattersonnet/project-structure",
  "scope": "@rpattersonnet",
  "version": "0.0.0",
  "description": "Project structure foundation or template, package metadata",
  "scripts": {
    "lint": "npm run lint:prettier && npm run lint:write-good",
    "lint:prettier": "prettier --check './'",
    "lint:write-good": "git ls-files -co --exclude-standard -z | grep -Ezv '^LICENSES/' | xargs -0 -t -- write-good --no-weasel --no-adverb --no-illusion",
    "format": "prettier --write './'"
  },
  "keywords": [
    "template",
    "structure"
  ],
  "license": "MIT",
  "author": {
    "name": "Ross Patterson",
    "email": "me@rpatterson.net",
    "url": "https://www.rpatterson.net/"
  },
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/rpatterson/project-structure.git"
  },
  "funding": {
    "type": "liberapay",
    "url": "https://liberapay.com/rpatterson/donate"
  },
  "devDependencies": {
    "prettier": "2.8.8",
    "write-good": "^1.0.8"
  }
}
