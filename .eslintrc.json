{
  "env": {
    "browser": true,
    "es2021": true,
    "mocha": true
  },
  "plugins": ["mocha-no-only"],
  "extends": ["eslint:all", "airbnb-base", "prettier"],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "import/no-unused-modules": [
      "error",
      { "missingExports": true, "unusedExports": true }
    ]
  },
  "overrides": [
    {
      "files": ["web-test-runner.config.js"],
      "env": {
        "node": true
      }
    }
  ]
}
